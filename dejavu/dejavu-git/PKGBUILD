pkgname=('dejavu-git')
_srcname='dejavu'
pkgdesc='Audio fingerprinting and recognition in Python '
pkgver='r1'
pkgrel='1'
arch=('any')
url="https://github.com/worldveil/${_srcname}"
license=('MIT')

depends=(
    'python2'
    'python2-pyaudio'
    'ffmpeg'
    'python2-pydub'
    'python2-numpy'
    'python2-scipy'
    'python2-matplotlib'
    'mysql-python'
)
makedepends=('git' 'python2-setuptools')
provides=("${pkgname[0]%-git}")
conflicts=("${pkgname[0]%-git}")

source=("${_srcname}::git+https://github.com/worldveil/${_srcname}.git")
sha512sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_srcname}"

    printf 'r%s.%s.%s\n' \
        "$( git rev-list --count 'HEAD' )" \
        "$( git log --max-count='1' --pretty='format:%ct' )" \
        "$( git rev-parse --short 'HEAD' )"
}

package() {
    cd "${srcdir}/${_srcname}"

    python2 setup.py install --root="${pkgdir}" --optimize=1
}
