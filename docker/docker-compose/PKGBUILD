pkgname=('docker-compose')
_srcname='compose'
pkgver='1.4.2'
pkgrel='1'
pkgdesc='Define and run complex applications using Docker'
arch=('any')
url='https://github.com/docker/compose'
license=('Apache')

depends=(
    'python'
    'python-docopt'
    'python-yaml'
    'python-requests'
    'python-texttable'
    'python-websocket-client'
    'python-docker-py'
    'python-dockerpty'
    'python-six'
    'python-jsonschema'
    'python-setuptools'
)
makedepends=('git')
provides=('docker-compose')
conflicts=('docker-compose')

source=("${_srcname}::git+https://github.com/docker/compose.git#tag=${pkgver}")
sha512sums=('SKIP')

package() {
    cd "${srcdir}/${_srcname}"

    python setup.py install --root="${pkgdir}" --optimize=1

    install -D --mode=644 LICENSE "${pkgdir}/usr/share/licenses/${_srcname}/LICENSE"
    install -D --mode=644 contrib/completion/bash/docker-compose "${pkgdir}/usr/share/bash-completion/completions/docker-compose"
}
