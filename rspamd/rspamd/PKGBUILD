# shellcheck disable=SC2034,SC2154,SC2164
pkgname=('rspamd')
_srcname='rspamd'
pkgdesc='Rapid spam filtering system'
pkgver='1.9.0'
_commit='0e2437493e215bb5ef514f0d0a618fa1c071aac1'
pkgrel='1'
arch=('i686' 'x86_64')
url="https://github.com/vstakhov/${_srcname}"
license=('Apache')

depends=('openssl' 'libevent' 'glib2' 'gmime' 'luajit' 'sqlite' 'hiredis' 'file' 'gd' 'icu')
makedepends=('git' 'cmake' 'pkgconfig' 'ragel')
provides=("${pkgname[0]%-git}")
conflicts=("${pkgname[0]%-git}")

source=("${_srcname}::git+${url}.git#commit=${_commit}")
sha512sums=('SKIP')

build() {
    cd "${srcdir}/${_srcname}"

    cmake \
        -DCMAKE_INSTALL_PREFIX='/usr' \
        -DCONFDIR='/etc/rspamd' \
        -DRUNDIR='/run/rspamd' \
        -DDBDIR='/var/lib/rspamd' \
        -DLOGDIR='/var/log/rspamd' \
        -DWANT_SYSTEMD_UNITS='ON' \
        .

    make
}

package() {
    cd "${srcdir}/${_srcname}"

    make DESTDIR="${pkgdir}" install
}
