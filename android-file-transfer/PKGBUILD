pkgname=('android-file-transfer')
_srcname='android-file-transfer-linux'
pkgdesc='Reliable MTP client with minimalistic UI'
pkgver='2.3'
pkgrel='1'
arch=('i686' 'x86_64')
url="https://github.com/whoozle/${_srcname}"
license=('GPL2')

depends=('fuse')
makedepends=('git' 'cmake')
provides=("${pkgname[0]%-git}")
conflicts=("${pkgname[0]%-git}")

source=("${_srcname}::git+https://github.com/whoozle/${_srcname}.git#tag=v${pkgver}")
sha512sums=('SKIP')

build() {
    cd "${srcdir}/${_srcname}"

    cmake \
        -DCMAKE_INSTALL_PREFIX='/usr' \
        -DBUILD_QT_UI='OFF' \
        CMakeLists.txt
}

package() {
    cd "${srcdir}/${_srcname}"

    make DESTDIR="${pkgdir}" install
}
